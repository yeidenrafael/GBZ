                </div>
                @Model.ExtendedProperties["title"].ToString()
            </div>

            <div class="panel-body">
                <div class="row">

                    @foreach (System.Data.DataColumn col in Model.Columns)
                    {
                        if (col.ColumnMapping != System.Data.MappingType.Hidden && col.ExtendedProperties["is_header"] != null)
                        {
                            if (col.ExtendedProperties["is_header"].Equals(true))
                            {
                                <div class="col-sm-3">
                                    <span class="font-extra-bold">@col.Caption: </span>
                                    @if (Model.Rows.Count > 0)
                                    {
