@using System.Data
@using GrinGlobal.Zone.Helpers

@{
    Layout = "~/Views/Shared/_Layout_Blank.cshtml";
    ViewBag.Title = "Login";
}

<div class="login-container">
    <div class="row">
        <div class="col-md-12">
            <div class="text-center m-b-md">
                <h3>GB-Zone</h3>
                <small>GRIN-Global app</small>
            </div>
            <div class="hpanel">
                <div class="panel-body">
                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.ValidationSummary(true, "", new { @class = "btn-danger2" })
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <label class="control-label">Connect To</label>
                            <select class="form-control m-b" name="server">
                                <option value="01" selected="selected">Wheat Genbank</option>
                                <option value="02">Maiz Genbank</option>
                            </select>
                            <span class="help-block small">GRIN-Global server</span>
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="username">Username</label>
                            <input type="text" placeholder="GRIN-Global username" title="Please enter you username" required="" value="" name="username" id="username" class="form-control">
                            <span class="help-block small">Your GRIN-Global username</span>
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="password">Password</label>
                            <input type="password" title="Please enter your password" placeholder="******" required="" value="" name="password" id="password" class="form-control">
                            <span class="help-block small">Your strong password</span>
                        </div>
                        <button class="btn btn-success btn-block">Login</button>

                    }
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 text-center">
            GRIN-Global <strong>GB-Zone</strong><br /> © 2019 CIMMYT
        </div>
    </div>
</div>
