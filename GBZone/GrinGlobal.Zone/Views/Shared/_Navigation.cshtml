
<form role="form" id="formFilter" method="post">
    <div id="navigation">
        <div class="stats-label text-color">
            <span class="glyphicon glyphicon-user font-extra-bold font-uppercase">
                @if (Request.IsAuthenticated)
                {
                    <strong>@Html.Encode(User.Identity.Name)</strong>
                }

            </span>
        </div>

        <h4>
            Filters
        </h4>

        <div class="form-group">
            <div class="input-group">
                <span class="input-group-addon">
                    <input id="radio1" type="radio" name="radios" value="01" />
                </span>
                <input type="text" class="form-control" placeholder="OrderId" id="text01" name="text01" onfocus="getElementById('radio1').checked = true" />
            </div>
        </div>
        <div class="form-group">
            <div class="input-group">
                <span class="input-group-addon">
                    <input id="radio2" type="radio" name="radios" value="02" />
                </span>
                <input type="text" class="form-control ggbox" placeholder="BOX" id="text02" name="text02" onfocus="getElementById('radio2').checked = true" />
            </div>
        </div>
        <div class="form-group">
            <div class="input-group">
                <span class="input-group-addon">
                    <input id="radio3" type="radio" name="radios" value="03" />
                </span>
                <input type="text" class="form-control" placeholder="Acc Number" id="text03" name="text03" onfocus="getElementById('radio3').checked = true" />
            </div>
        </div>
        <button id="btnapply" type="button" class="btn btn-success btn-block">Search</button>


    </div>
</form>